---
import "../../styles/global.css";
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import StatusBadge from '../../components/StatusBadge.astro';

interface Props {
  entry: CollectionEntry<'initiatives'>;
}

export const prerender = true;

export async function getStaticPaths() {
  try {
    console.log("Trying to fetch collections...");
    const initiatives = await getCollection('initiatives');
    console.log("Found initiatives:", initiatives.length, initiatives.map(i => i.slug));
    return initiatives.map((entry) => ({
      params: { slug: entry.slug }, 
      props: { entry },
    }));
  } catch (error) {
    console.error("Error fetching collections:", error);
    return [];
  }
}

const { entry } = Astro.props;
// Add error handling
if (!entry) {
  return Astro.redirect('/404');
}
const { Content } = await entry.render();

// Get status-specific colors and icons
const statusConfig = {
  'passed': {
    bgColor: 'bg-green-100',
    textColor: 'text-green-800',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>`
  },
  'in-progress': {
    bgColor: 'bg-yellow-100',
    textColor: 'text-yellow-800',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>`
  },
  'proposed': {
    bgColor: 'bg-blue-100',
    textColor: 'text-blue-800',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>`
  },
  'blocked': {
    bgColor: 'bg-red-100',
    textColor: 'text-red-800',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>`
  }
};

const statusData = statusConfig[entry.data.status];
---

<Layout title={entry.data.title}>
  <!-- Hero Section with gradient based on status -->
  <div class={`${statusData.bgColor} border-b border-gray-200`}>
    <div class="container mx-auto px-4 py-8">
      <div class="mb-4">
        <a href="/" class="inline-flex items-center text-gray-700 hover:text-blue-600 font-medium transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to all initiatives
        </a>
      </div>
      
      <div class="flex items-start">
        <div class="flex-grow">
          <div class="flex items-center mb-3">
            <div class="w-10 h-10 rounded-full flex items-center justify-center mr-3" set:html={statusData.icon}></div>
            <StatusBadge status={entry.data.status} />
          </div>
          <h1 class="text-4xl font-bold mb-2">{entry.data.title}</h1>
          <p class="text-xl text-gray-700">{entry.data.description}</p>
        </div>
      </div>
    </div>
  </div>
  
  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="md:col-span-3">
        <!-- Content Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
          <div class="prose max-w-none">
            <Content />
          </div>
        </div>
        
        <!-- Sources -->
        {entry.data.sources && entry.data.sources.length > 0 && (
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
            <h2 class="text-2xl font-bold mb-4 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
              </svg>
              Sources
            </h2>
            <ul class="space-y-3 divide-y divide-gray-100">
              {entry.data.sources.map((source) => (
                <li class="pt-3 first:pt-0">
                  <a href={source.url} target="_blank" rel="noopener noreferrer" class="flex items-center text-blue-600 hover:underline">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    {source.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
      
      <!-- Sidebar -->
      <div class="md:col-span-1">
        <!-- Initiative Details -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 mb-6">
          <h2 class="text-xl font-bold mb-4 border-b pb-2">Initiative Details</h2>
          <dl class="space-y-3">
            <div>
              <dt class="font-medium text-gray-600">Status</dt>
              <dd class="mt-1"><StatusBadge status={entry.data.status} /></dd>
            </div>
            
            <div>
              <dt class="font-medium text-gray-600">Category</dt>
              <dd class="mt-1">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                  {entry.data.category}
                </span>
              </dd>
            </div>
            
            <div>
              <dt class="font-medium text-gray-600">Date Proposed</dt>
              <dd class="mt-1">{entry.data.dateProposed.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'})}</dd>
            </div>
            
            {entry.data.datePassed && (
              <div>
                <dt class="font-medium text-gray-600">Date Passed</dt>
                <dd class="mt-1">{entry.data.datePassed.toLocaleDateString('en-US', {year: 'numeric', month: 'long', day: 'numeric'})}</dd>
              </div>
            )}
          </dl>
        </div>
        
        <!-- Related Pull Requests -->
        {entry.data.pullRequests && entry.data.pullRequests.length > 0 && (
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 mb-6">
            <h2 class="text-xl font-bold mb-4 border-b pb-2 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
              Pull Requests
            </h2>
            <ul class="space-y-4">
              {entry.data.pullRequests.map((pr) => (
                <li class="border-b border-gray-100 pb-3 last:border-0">
                  <a href={pr.url} target="_blank" rel="noopener noreferrer" class="font-semibold text-blue-600 hover:underline flex items-center">
                    <svg class="w-5 h-5 mr-1 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.8,85.1h56l0,0c2.2,0,4-1.8,4-4v-32h-8v28h-48v-48h28v-8h-32l0,0c-2.2,0-4,1.8-4,4v56C14.8,83.3,16.6,85.1,18.8,85.1z"></path>
                      <polygon points="45.7,48.7 51.3,54.3 77.2,28.5 77.2,37.2 85.2,37.2 85.2,14.9 62.8,14.9 62.8,22.9 71.5,22.9"></polygon>
                    </svg>
                    #{pr.number}: {pr.title}
                  </a>
                  <div class="text-sm text-gray-600 mt-1 flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                    {pr.author}
                    <span class="mx-1">â€¢</span>
                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                    {new Date(pr.mergedAt).toLocaleDateString()}
                  </div>
                  {pr.description && (
                    <p class="text-sm mt-1 text-gray-700">{pr.description}</p>
                  )}
                </li>
              ))}
            </ul>
          </div>
        )}
        
        <!-- Edit on GitHub -->
        <div class="bg-indigo-50 rounded-xl p-4 border border-indigo-100">
          <h3 class="font-medium text-indigo-800 mb-2">Contribute to this page</h3>
          <p class="text-sm text-indigo-700 mb-3">
            This information is community-maintained and may need updates.
          </p>
          <a 
            href={`https://github.com/uhteddy/watch2025.org/edit/main/src/content/initiatives/${entry.slug}.md`} 
            class="text-sm flex items-center font-medium text-indigo-600 hover:text-indigo-800 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="mr-1" viewBox="0 0 16 16">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
            </svg>
            Edit this page on GitHub
          </a>
        </div>

        <!-- Share links -->
        <div class="mt-6">
          <h3 class="text-sm font-medium text-gray-600 mb-2">Share this initiative:</h3>
          <div class="flex space-x-2">
            <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(entry.data.title)}&url=${encodeURIComponent(Astro.url.href)}`} 
               target="_blank" 
               rel="noopener noreferrer" 
               class="bg-blue-500 hover:bg-blue-600 text-white p-2 rounded">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723 9.99 9.99 0 01-3.127 1.195 4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
            <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`} 
               target="_blank" 
               rel="noopener noreferrer" 
               class="bg-blue-600 hover:bg-blue-700 text-white p-2 rounded">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`} 
               target="_blank" 
               rel="noopener noreferrer" 
               class="bg-blue-800 hover:bg-blue-900 text-white p-2 rounded">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>